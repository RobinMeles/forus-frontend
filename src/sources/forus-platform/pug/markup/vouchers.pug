block content
    .card.form
        .card-header
            .card-title Vouchers (8)
        .card-section
            .card-block.card-block-table
                .table-wrapper
                    table.table
                        tr
                            th AMOUNT
                            th CREATED
                            th EXPIRATION
                            th FUND
                            th GRANTED
                            th QR-CODE
                        mixin row(granted)
                            tr
