                                td 2019/01/29
                                td Forus
                                td
                                    if (granted)
                                        .td-boolean
                                            em.mdi.mdi-check-circle
                                            | Ja
                                    else
                                        .td-boolean
                                            em.mdi.mdi-close
                                            | Nee
                                td
                                    button.button.button-primary.button-icon
                                        em.mdi.mdi-qrcode
                        +row()
