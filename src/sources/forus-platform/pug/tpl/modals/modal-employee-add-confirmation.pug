.modal.modal-employee-add(ng-class="$ctrl.modalClass")
    .modal-backdrop(ng-click="$ctrl.cancel()")
    .modal-window(ng-class="$ctrl.class")
        .modal-close(ng-click="$ctrl.close()")
            include ../../../resources/platform-general/assets/img/svg/close.svg

        .modal-body: .modal-section
            .modal-title(translate="sign_up_provider.employee.labels.employee_add_header")

            .modal-description(
                translate="sign_up_provider.employee.labels.employee_add_message"
                translate-values='{email: $ctrl.employee.email}')

            .modal-actions: .flex-row
                .flex-col: .button.button-primary-outline(
                    ng-click="$ctrl.cancel()"
                    translate="sign_up_provider.employee.labels.cancel")
                .flex-col: .button.button-primary(
                    ng-click="$ctrl.confirm()"
                    translate="sign_up_provider.employee.labels.accept")